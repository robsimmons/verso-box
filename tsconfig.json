/* Visit https://www.typescriptlang.org/tsconfig/ to learn about this file */
{
  "compilerOptions": {
    /* Basic configuration */
    "lib": ["ES2024"],
    "module": "node18",
    "skipLibCheck": true,

    /* Support the use of type stripping in Node */
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules", "./client", "./frontend"]
}
